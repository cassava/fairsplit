# Maintainer: Ben Morgan <neembi@gmail.com>
pkgname=fairsplit
pkgver=1.1
pkgrel=2
epoch=
pkgdesc="A simple program to calculate how to split multiple expenses fairly."
arch=('i686' 'x86_64')
url="https://github.com/cassava/fairsplit"
license=('MIT')
groups=()
depends=()
makedepends=('go')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(https://github.com/cassava/${pkgname}/archive/v${pkgver}.tar.gz)
noextract=()

build() {
	cd "$srcdir/$pkgname-$pkgver"
    go build
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
    install -m755 -D "$pkgname-$pkgver" "$pkgdir/usr/bin/$pkgname"
    install -m644 -D "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('21fd055383d06f076b80b98268946b83')
